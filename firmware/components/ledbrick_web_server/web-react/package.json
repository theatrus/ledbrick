{
  "name": "ledbrick-web-ui",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:server": "./scripts/dev-server.sh",
    "build": "vite build",
    "build:debug": "vite build --mode debug",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "size": "npm run build && ls -lah dist/*.js dist/*.css | awk '{print $5, $9}'",
    "generate-cpp": "node scripts/generate-web-content.js",
    "clean": "rm -rf dist node_modules",
    "build:full": "npm run clean && npm install && npm run build && npm run generate-cpp"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "chartjs-plugin-annotation": "^3.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-compression": "^0.5.1",
    "rollup-plugin-visualizer": "^5.9.0",
    "terser": "^5.24.0"
  }
}